<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- NoActionBar Theme -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Styles -->
    <style name="AppText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppText.Header" parent="AppText">
        <item name="android:textSize">@dimen/app_large_text_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppText.SuperHeader" parent="AppText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/app_super_large_text_size</item>
    </style>

    <style name="AppText.Small" parent="AppText">
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Medium" parent="AppText">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
    </style>

    <style name="AppText.GrayedOut" parent="AppText">
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@color/faint_text_color</item>
    </style>

    <!-- Button Styles -->
    <style name="AppMaterialButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="cornerRadius">@dimen/app_corner_radius</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
