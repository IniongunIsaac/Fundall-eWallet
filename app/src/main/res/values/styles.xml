<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- NoActionBar Theme -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Text Styles -->
    <style name="AppText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppText.White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppText.Header" parent="AppText">
        <item name="android:textSize">@dimen/app_large_text_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppText.Header.White" parent="AppText">
        <item name="android:textSize">@dimen/app_large_text_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppText.SuperHeader" parent="AppText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/app_super_large_text_size</item>
    </style>

    <style name="AppText.SuperHeader.White" parent="AppText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/app_super_large_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppText.Small" parent="AppText">
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Small.White" parent="AppText">
        <item name="android:textSize">@dimen/app_small_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppText.Medium" parent="AppText">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
    </style>

    <style name="AppText.Medium.White" parent="AppText">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppText.GrayedOut" parent="AppText">
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@color/faint_text_color</item>
    </style>

    <!-- Button Styles -->

    <style name="AppButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="cornerRadius">@dimen/app_corner_radius</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppButton.Outlined.Bold.White" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Outlined.Bold.Black" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppIconButton.Outlined.Rounded.Border" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">15dp</item>
        <item name="rippleColor">@color/app_color</item>
    </style>

    <!-- Text Input Styles-->

    <style name="TextInput.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextInput.FilledDense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextInput.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">@color/app_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInput.OutlinedDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">@color/app_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInput.OutlinedDense.NoBorderRadius" parent="TextInput.OutlinedDense">
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
    </style>

</resources>
